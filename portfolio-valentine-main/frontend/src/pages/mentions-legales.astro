  max-width: 800px;
  margin: 0 auto;
  padding: 0 2rem;
}

.page-header {
  margin-bottom: 3rem;
  text-align: center;
  
  h1 {
    font-size: 2.5rem;
    font-weight: 700;
    margin: 0 0 1rem 0;
    color: $color-gray-dark;
  }
  
  .breadcrumb {
    font-size: 0.9rem;
    color: $color-gray-medium;
    
    a {
      color: $color-gray-medium;
      text-decoration: none;
      
      &:hover {
        color: $color-gray-dark;
        text-decoration: underline;
      }
    }
    
    .separator {
      margin: 0 0.5rem;
    }
    
    .current {
      color: $color-gray-dark;
      font-weight: 500;
    }
  }
}

.page-content {
  margin-bottom: 3rem;
  
  .error-notice {
    background: #fee2e2;
    border: 1px solid #fecaca;
    padding: 1rem;
    border-radius: 8px;
    margin-bottom: 2rem;
    
    p {
      margin: 0;
      color: #991b1b;
    }
  }
  
  .content-wrapper {
    background: lighten($color-gray-light, 3%);
    padding: 2.5rem;
    border-radius: 12px;
    border: 1px solid $color-gray-light;
  }
  
  .markdown-content {
    line-height: 1.7;
    
    h1, h2, h3 {
      color: $color-gray-dark;
      margin: 2rem 0 1rem 0;
      
      &:first-child {
        margin-top: 0;
      }
    }
    
    h1 {
      font-size: 1.8rem;
      font-weight: 700;
    }
    
    h2 {
      font-size: 1.4rem;
      font-weight: 600;
    }
    
    h3 {
      font-size: 1.2rem;
      font-weight: 600;
    }
    
    p {
      margin: 1rem 0;
      color: $color-gray-medium;
    }
    
    strong {
      color: $color-gray-dark;
      font-weight: 600;
    }
    
    a {
      color: $color-gray-dark;
      text-decoration: underline;
      
      &:hover {
        opacity: 0.8;
      }
    }
  }
}

.page-footer {
  text-align: center;
  padding-top: 2rem;
  border-top: 1px solid $color-gray-light;
  
  p {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 0;
  }
  
  a {
    color: $color-gray-medium;
    text-decoration: none;
    font-weight: 500;
    
    &:hover {
      color: $color-gray-dark;
      text-decoration: underline;
    }
  }
}

@media (max-width: 768px) {
  .container {
    padding: 0 1rem;
  }
  
  .page-header h1 {
    font-size: 2rem;
  }
  
  .content-wrapper {
    padding: 1.5rem;
  }
  
  .page-footer p {
    flex-direction: column;
    gap: 1rem;
  }
