---
import "@/styles/main.scss";
import SEOHead from '@/components/ui/SEOHead.astro';
import AnalyticsTracker from '@/components/ui/AnalyticsTracker.vue';

export interface Props {
  title?: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  keywords?: string[];
  bodyClass?: string;
}

const { 
  title,
  description,
  image,
  type = 'website',
  keywords,
  bodyClass = ''
} = Astro.props;
---

<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- Composant SEO avec métadonnées complètes -->
    <SEOHead 
      title={title}
      description={description}
      image={image}
      type={type}
      keywords={keywords}
    />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inria+Serif:ital,wght@0,300;0,400;0,700;1,300;1,400;1,700&display=swap" rel="stylesheet">
    
  </head>
  <body class={bodyClass}>
    <slot />
    
    <!-- Analytics Tracker (invisible component) -->
    <AnalyticsTracker client:load />
  </body>
</html>
